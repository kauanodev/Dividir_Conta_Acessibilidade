<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConstraintLayout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Action Bar. -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <!-- Permite ajuste com texto escalável -->
        <item name="height">wrap_content</item>
        <!-- Garante área mínima de toque -->
        <item name="minHeight">56dp</item>
        <!-- Define cor de fundo, se quiser -->
        <item name="background">?attr/colorPrimary</item>
        <!-- Estilo opcional para o título -->
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
    </style>

    <style name="CustomActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item> <!-- Texto grande e escalável -->
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
